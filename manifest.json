{

	"manifest_version": 3,

	"name": "neat extension",
	"version": "0.0.3",
	"description": "Save anything valuable you come across on the web to a judgement free network.",
	"browser_action": {
		"default_title": "Save to neat",
		"default_popup": "popup.html",
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
		"https://neat.to"
  ]

}
